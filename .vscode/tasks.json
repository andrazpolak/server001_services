    "tasks": [
        {
            "label": "docker-compose - up",
            "type": "shell",
            "command": "sudo docker-compose -f docker-compose.yml up --build"
        },
        {
            "label": "docker-compose - up-deamon",
            "type": "shell",
            "command": "sudo docker-compose -f docker-compose.yml up -d --build"
